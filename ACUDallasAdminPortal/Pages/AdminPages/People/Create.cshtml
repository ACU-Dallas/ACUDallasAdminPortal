@page
@model ACUDallasAdminPortal.Pages.AdminPages.People.CreateModel

@{
    ViewData["Title"] = "Add Staff";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Add</h1>

<h4>Staff/Faculty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="People.PersonId" class="control-label"></label>
                <input asp-for="People.PersonId" class="form-control" />
                <span asp-validation-for="People.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.PeopleTypeId" class="control-label"></label>
                <select asp-for="People.PeopleTypeId" class ="form-control" asp-items="ViewBag.PeopleTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="People.FirstName" class="control-label"></label>
                <input asp-for="People.FirstName" class="form-control" />
                <span asp-validation-for="People.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.LastName" class="control-label"></label>
                <input asp-for="People.LastName" class="form-control" />
                <span asp-validation-for="People.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.MiddleName" class="control-label"></label>
                <input asp-for="People.MiddleName" class="form-control" />
                <span asp-validation-for="People.MiddleName" class="text-danger"></span>
            </div>
            <div class="custom-file">
                <label asp-for="FileUpload" class="custom-file-label" for="Photo">Upload Photo</label>
                <input asp-for="FileUpload" class="custom-file-input" id="Photo" type="file" />&nbsp;
                @*<input asp-page-handler="Upload" class="btn" type="submit" value="Upload" />*@
               <span asp-validation-for="People.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.Title" class="control-label"></label>
                <input asp-for="People.Title" class="form-control" />
                <span asp-validation-for="People.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
