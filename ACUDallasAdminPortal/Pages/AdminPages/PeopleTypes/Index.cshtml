@page
@model ACUDallasAdminPortal.Pages.AdminPages.PeopleTypes.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PeopleTypes[0].PeopleTypeDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PeopleTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PeopleTypeDesc)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PeopleTypeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PeopleTypeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PeopleTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
